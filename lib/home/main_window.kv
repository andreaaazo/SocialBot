<MainWindow>:
    orientation: "vertical"

    MDBoxLayout:
        size_hint: 1, .3
        canvas.before:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            halign: "center"
            text: "Here goes the top menu"

    MDBoxLayout:
        orientation: "horizontal"

        MDBoxLayout:
            size_hint: .3, 1
            canvas.before:
                Color:
                    rgb: 0, 1, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                halign: "center"
                text: "here goes the left menu"

        ScreensManager:
